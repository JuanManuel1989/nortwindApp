<mvc:View controllerName="northwind.products.northwindapp.controller.Home" xmlns:dnd="sap.ui.core.dnd" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" height="100%">
	<Shell id="shell">
		<Page id="page" title="{i18n>title}">
			<content>
				<HBox>
					<Button text="Click Me to do something" />
					<ComboBox items="{ path: '/Categories' }">
						<core:Item key="{CategoryName}" text="{CategoryName}" />
					</ComboBox>
					<ToolbarSpacer />
				</HBox>
				<ToggleButton id="bRefresh" text="Refresh Tables" press="onRefreshTable" />
				<Text text="texto 1" />
				<Text text="texto 2" />
				<Text text="texto 3" />
				<Text text="texto 4" />
				<HBox renderType="Bare">
					<Table id="idProductTable" items="{path: 'oModelMNA>/'}" growing="true" growingThreshold="5">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									<Title text="Products" level="H2" />
									<ToolbarSpacer />
									<ToggleButton id="toggleInfoToolbar" text="Refresh Products Table" press="onNewModel" />
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column width="12em">
								<Text text="Product Id/Name" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Supplier" />
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
								<Text text="Unit Price" />
							</Column>
						</columns>
						<items>
							<ColumnListItem vAlign="Middle">
								<cells>
									<ObjectIdentifier title="{oModelMNA>ProductName}" text="{oModelMNA>ProductID}" />
									<Text text="{oModelMNA>SupplierID}" />
									<ObjectNumber number="{oModelMNA>UnitPrice}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
